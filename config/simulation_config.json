{
  "description": "Configuration file for Monte Carlo Healthcare Simulation",
  "version": "1.0",

  "patient_generation": {
    "default_population_size": 1000,
    "min_population_size": 50,
    "max_population_size": 5000,
    "default_amplification_factor": 0.3,
    "default_random_seed": 42,
    "age_range": {
      "min": 30,
      "max": 85
    },
    "bmi_range": {
      "min": 18,
      "max": 50
    },
    "severity_score_range": {
      "min": 0,
      "max": 100
    }
  },

  "simulation_parameters": {
    "default_num_simulations": 10000,
    "simulation_options": [1000, 5000, 10000, 20000, 50000],
    "default_sample_size": 100,
    "confidence_levels": [0.50, 0.75, 0.90, 0.95, 0.99]
  },

  "treatment_parameters": {
    "standard_care": {
      "name": "Standard Care",
      "efficacy_mean": 0.65,
      "efficacy_std": 0.15,
      "recovery_days_optimistic": 30,
      "recovery_days_likely": 60,
      "recovery_days_pessimistic": 120,
      "complication_rate": 0.10,
      "side_effect_severity": 2.5
    },
    "intensive_therapy": {
      "name": "Intensive Therapy",
      "efficacy_mean": 0.78,
      "efficacy_std": 0.18,
      "recovery_days_optimistic": 20,
      "recovery_days_likely": 45,
      "recovery_days_pessimistic": 90,
      "complication_rate": 0.18,
      "side_effect_severity": 4.5
    },
    "experimental_treatment": {
      "name": "Experimental Treatment",
      "efficacy_mean": 0.72,
      "efficacy_std": 0.22,
      "recovery_days_optimistic": 15,
      "recovery_days_likely": 40,
      "recovery_days_pessimistic": 100,
      "complication_rate": 0.25,
      "side_effect_severity": 5.5
    }
  },

  "risk_stratification": {
    "low_risk": {
      "severity_min": 0,
      "severity_max": 30,
      "label": "Low Risk"
    },
    "moderate_risk": {
      "severity_min": 30,
      "severity_max": 50,
      "label": "Moderate Risk"
    },
    "high_risk": {
      "severity_min": 50,
      "severity_max": 70,
      "label": "High Risk"
    },
    "very_high_risk": {
      "severity_min": 70,
      "severity_max": 100,
      "label": "Very High Risk"
    }
  },

  "analysis_settings": {
    "percentiles": [5, 25, 50, 75, 95],
    "default_confidence_level": 0.95,
    "success_threshold": 0.40,
    "visualization_dpi": 300,
    "figure_size": {
      "width": 12,
      "height": 8
    }
  },

  "patient_adjustments": {
    "age_penalty_per_year": 0.002,
    "bmi_penalty_per_unit": 0.005,
    "bmi_threshold": 30,
    "severity_penalty_factor": 0.1
  },

  "diseases": [
    "Type 2 Diabetes",
    "Hypertension",
    "Both"
  ],

  "treatments": [
    "Standard Care",
    "Intensive Therapy",
    "Experimental Treatment"
  ],

  "output_settings": {
    "data_directory": "data",
    "output_directory": "outputs",
    "default_csv_encoding": "utf-8",
    "default_figure_format": "png"
  }
}
